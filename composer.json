{
  "name": "kubano09/flarum-chatgpt-writer",
  "description": "ChatGPT writer for Flarum (revived & updated)",
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.8",
    "guzzlehttp/guzzle": "^7.8",
    "openai-php/client": "^0.10"
  },
  "autoload": {
    "psr-4": {
      "Kubano09\\ChatgptWriter\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "ChatGPT Writer",
      "category": "feature"
    }
  },
  "support": {
    "issues": "https://github.com/kubano09/flarum-chatgpt-writer/issues",
    "source": "https://github.com/kubano09/flarum-chatgpt-writer"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
